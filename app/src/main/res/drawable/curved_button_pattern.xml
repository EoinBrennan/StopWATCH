<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#ffe8cc"
                android:endColor="#fabe18"
                android:angle="180" />     <!-- Specifies a gradient color, start, end colors and angle for gradient -->
            <stroke
                android:width="1dp"
                android:color="#dcdcdc" /> <!-- borderline witdh and colour -->
            <corners
                android:radius="5dp" />  <!-- Creates rounded corners for the rectangle -->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/> <!-- padding for text -->
        </shape>
    </item>

    <!-- pressed -->


    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#ffcf00"
                android:endColor="#ffcf00"
                android:angle="180" />
            <stroke
                android:width="1dp"
                android:color="#dcdcdc" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <!-- focused -->


    <item>
        <shape>
            <gradient
                android:startColor="#fabe18"
                android:endColor="#ffcf00"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#dcdcdc" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <!-- default -->
</selector>
