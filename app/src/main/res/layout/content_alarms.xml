<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.eagerbeavers.stopwatch.AlarmsActivity"
    android:background="#ffe8cc">

    <LinearLayout android:layout_height="fill_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="12"
        android:background="#ffe8cc">

        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_weight="11"
            android:background="#ffe8cc">

            <!-- Top Bar -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:background="@color/background">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="Back"
                    android:layout_weight="5"
                    android:background="@drawable/button_pattern"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:background="@color/background"
                    android:layout_weight="5">

                </LinearLayout>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="New"
                    android:layout_weight="5"
                    android:background="@drawable/button_pattern"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:background="#d9be9d">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Checkbox"
                    android:id="@+id/textView2"
                    android:layout_weight="2"
                    android:layout_marginTop="15dp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Alarm Name/Destination"
                    android:id="@+id/textView"
                    android:layout_weight="8"
                    android:layout_marginTop="15dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Centre Content -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="#ffe8cc">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:text="On/off"
                    android:background="@drawable/curved_button_pattern"
                    android:layout_weight="8"
                    android:textSize="10sp"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:text="Edit Alarm"
                    android:background="@drawable/curved_button_pattern"
                    android:layout_weight="2"
                    android:id="@+id/buttonEditActivity"
                    android:onClick="goToEdit"
                    android:textSize="10sp"
                    />

                <!--- Commenting out for now

                <ListView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/OnOffListView"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2" />

                <ListView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/AlarmsListView"
                    android:layout_weight="8" />
                -->


            </LinearLayout>

        </LinearLayout>

        <!-- Bottom Bar

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/background"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Do thing 1"
                android:background="@drawable/button_pattern"
                android:layout_weight="5" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@color/background"
                android:layout_weight="5">

            </LinearLayout>

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Do thing 2"
                android:layout_weight="5"
                android:background="@drawable/button_pattern" />

        </LinearLayout>

        -->

    </LinearLayout>

</RelativeLayout>