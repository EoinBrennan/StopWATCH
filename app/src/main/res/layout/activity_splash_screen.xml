<?xml version="1.0" encoding="utf-8"?>

<!-- This layout has no toolbar, or any other views except for the single, fullscreen image view.
    This image view displays the StopWATCH logo, cropped and spaced to fill the screen. -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.eagerbeavers.stopwatch.SplashScreen">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@drawable/stopwatch_splashlogo"
        android:scaleType= "centerCrop"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
