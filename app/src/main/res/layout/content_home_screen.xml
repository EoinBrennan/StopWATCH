<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:showIn="@layout/home_screen"
    tools:context=".HomeScreen">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/home_map"
            tools:context="com.eagerbeavers.stopwatch.HomeScreenActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_weight="9" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/background">

            <Button
                android:id="@+id/buttonAlarms"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:onClick="goToAlarms"
                android:text="Alarms"
                android:background="@color/background"
                android:layout_weight="5" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@color/background"
                android:layout_weight="5">

            </LinearLayout>

            <Button
                android:id="@+id/buttonSettings"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:onClick="goToSettings"
                android:text="@string/stringSettings"
                android:layout_weight="5"
                android:background="@color/background"
                />

            <!-- Commenting this out for now. Would like two buttons on either side max on bottom bar

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/distanceMeasureBtn"
                android:id="@+id/button"
                android:onClick="showDistance"
                android:background="@drawable/button_pattern"
                android:layout_weight="2.5" />

            -->

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Bar -->

</RelativeLayout>
