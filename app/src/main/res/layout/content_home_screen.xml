<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:showIn="@layout/home_screen"
    tools:context=".HomeScreen">

    <LinearLayout
        android:layout_height="480dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

    </LinearLayout>

    <!-- Bottom Bar -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/background"
        >

        <Button
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:onClick="gotToMap"
            android:text="@string/stringMap"
            />

        <Button
            android:id="@+id/buttonAlarms"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:onClick="goToAlarms"
            android:text="@string/stringAlarms"
            />

        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:onClick="goToSettings"
            android:text="@string/stringSettings"
            />

    </RelativeLayout>

</RelativeLayout>
