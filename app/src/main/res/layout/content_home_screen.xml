<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:showIn="@layout/home_screen"
    tools:context=".HomeScreen">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:id="@+id/home_map"
        tools:context="com.eagerbeavers.stopwatch.HomeScreenActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        />

    <!-- Bottom Bar -->

    <RelativeLayout
        android:id="@+id/HomeBottomBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/background"
        >

        <Button
            android:id="@+id/buttonAlarms"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:onClick="goToAlarms"
            android:text="@string/stringAlarms"
            />

        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:onClick="goToSettings"
            android:text="@string/stringSettings"
            />

    </RelativeLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/distanceMeasureBtn"
        android:id="@+id/button"
        android:layout_above="@id/HomeBottomBar"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:onClick="showDistance"
        />

</RelativeLayout>
