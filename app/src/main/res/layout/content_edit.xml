<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.eagerbeavers.stopwatch.EditActivity"
    android:background="#ffe8cc">

    <LinearLayout android:layout_height="fill_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="12"
        android:background="#ffe8cc">

        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_weight="11"
            android:background="#ffe8cc">

            <!-- Top Bar -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/background">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="Back"
                    android:layout_weight="5"
                    android:background="@color/background"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:background="@color/background"
                    android:layout_weight="5">

                </LinearLayout>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="Delete"
                    android:layout_weight="5"
                    android:background="@color/background" />
            </LinearLayout>

            <!-- Centre Content -->

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:background="#ffe8cc">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="Turn alarm on (checkbox)"
                    android:background="@color/core"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="Destination (location/custom)"
                    android:background="@color/core"
                    android:layout_weight="1"
                    android:id="@+id/buttonLocationChoice"
                    android:layout_alignParentLeft="true"
                    android:onClick="goToLocationChoice"/>



                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="Distance (geofence)"
                    android:background="@color/core"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="Repeat (days of week)"
                    android:background="@color/core"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="Ringtone (Alarm sound)"
                    android:background="@color/core"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="Vibrate (checkbox)"
                    android:background="@color/core"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="Label (name)"
                    android:layout_weight="1"
                    android:background="@color/core"
                    />


            </LinearLayout>

        </LinearLayout>

        <!-- Bottom Bar

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/background"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Do thing 1"
                android:background="@drawable/button_pattern"
                android:layout_weight="5" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@color/background"
                android:layout_weight="5">

            </LinearLayout>

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Do thing 2"
                android:layout_weight="5"
                android:background="@drawable/button_pattern" />

        </LinearLayout>

        -->

    </LinearLayout>

</RelativeLayout>